<h1>CloudMusic</h1>
<h2>Search page</h2>
Hello World ;)

<%= form_tag(root_path, method: "get") do %>
  <%= label_tag(:name, "Search for:") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @artists.any? %>
  <ul>
    <% @artists.each do |artist| %>
      <li>
        <span class="artist-name">
          <%= artist.full_name %>
        </span>
      </li>
    <% end %>
  </ul>
<% end %>
